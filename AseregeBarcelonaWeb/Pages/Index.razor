@page "/"
@using System.ComponentModel;
@((MarkupString)_selectedPage)

@code
{
	private static string _selectedPage = "<MainPage></MainPage>";
	public string SelectedPage
	{
		get => _selectedPage;
		set
		{
			_selectedPage = value;			
		}
	}

	public void UpdatePage() => OnAfterRenderAsync(false);
	protected override Task OnAfterRenderAsync(bool firstRender)
	{
		StateHasChanged();
		return base.OnAfterRenderAsync(firstRender);
	}
	
}