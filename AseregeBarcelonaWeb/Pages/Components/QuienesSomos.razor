@code 
{
	private List<MarkupString> Textos { get; set; } = new List<MarkupString>();

	protected override async Task OnInitializedAsync()
	{
		string route = "wwwroot/about.web";
		if (!System.IO.File.Exists(route))
		{			
			string jsonData = "[{\"Value\":\"<h2>TITULO</h2><p>PARAGRAFO EJEMPLO</p>\"}]";
			await System.IO.File.WriteAllTextAsync(route, jsonData);
		}		
		
		Textos = Newtonsoft.Json.JsonConvert.DeserializeObject<List<MarkupString>>(await System.IO.File.ReadAllTextAsync(route));
		await Task.CompletedTask;
		await base.OnInitializedAsync();
	}

	
}